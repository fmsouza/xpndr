{
  "name": "typegraphql-example",
  "scripts": {
    "dc:local": "docker-compose -p xpndr -f docker-compose.base.yml -f docker-compose.local.yml",
    "dev": "ts-node-dev -r tsconfig-paths/register --no-notify --respawn --transpile-only src/index.ts",
    "prisma:generate": "npx prisma generate",
    "start": "ts-node -r tsconfig-paths/register --no-notify --respawn --transpile-only src/index.ts",
    "start:dev": "npm run prisma:generate && npm run dev",
    "start:local": "npm run dc:local up backend",
    "lint": "eslint src",
    "migrate:dev": "prisma migrate dev"
  },
  "dependencies": {
    "@prisma/client": "3.11.0",
    "apollo-server": "3.6.4",
    "class-validator": "0.13.2",
    "graphql": "15.8.0",
    "graphql-scalars": "1.15.0",
    "jsonwebtoken": "^8.5.1",
    "memory-cache": "^0.2.0",
    "nubank-api": "^3.0.0",
    "reflect-metadata": "0.1.13",
    "tsconfig-paths": "^3.14.0",
    "ts-node": "10.7.0",
    "type-graphql": "1.1.1",
    "typedi": "^0.10.0",
    "typescript": "^4.6.2"
  },
  "devDependencies": {
    "@types/graphql": "14.5.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/memory-cache": "^0.2.2",
    "@types/node": "16.11.26",
    "@types/ws": "8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.0",
    "prisma": "3.11.0",
    "ts-node-dev": "1.1.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md,ts}": [
      "prisma format",
      "npm run lint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
